<h1 class="text-right">התחבר</h1>
<div class="login-container" style="max-width: 300px; margin: auto;">
    <form action="/login" method="post">
        <div class="form-group">
            <label for="email" class="text-right d-block">:אימייל</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="הכנס אימייל" required>
        </div>
        <div class="form-group">
            <label for="password" class="text-right d-block">:סיסמה</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="הכנס סיסמה" required>
        </div>
        <div class="form-group text-right">
            <button type="button" class="btn btn-primary" onclick="window.location.href='/signup'">הירשם</button>
            <button type="button" class="btn btn-primary" onclick="window.location.href= '/login'">התחבר</button>
        </div>
        <div class="text-right">
            <a href="/forgot-password">שכחת סיסמה?</a>
        </div>
    </form>
</div>
