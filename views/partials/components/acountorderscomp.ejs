<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var user = JSON.parse('<%- JSON.stringify(user) %>');
        var orders = user.orders
        console.log(orders)
        for (let i = 0; i < orders.length; i++) {
            const order = orders[i]
            orderCard = `
                     <h3 class="text-center">פרטי הזמנה</h3>
            <div class="order-details text-right d-block">
                <div class="row d-flex justify-content-end">
                    <div class="col-md-6">
                        <h6 class="date_order"> תאריך הזמנה</h6>
                               <p> ${order.date}</p>
                        <h6> סכום הזמנה</h6>
                               <p> ${order.totalPrice}</p>
                    </div>
                </div>
            `;
            //adding order to the  component
            $("#products_in_myorder_container").append(orderCard)
        }

        $("#adminpagebtt").click(function (event) {
            window.location.href = "/admin";
        });

        $("#log-out-btn").click(function (event) {
            const url = '/logout'
            $.ajax({
                url: url,
                type: "GET",
                data: JSON.stringify({}),
                contentType: "application/json",
                success: function (res) {
                    console.log('log out successfully applied!')
                    window.location.href = "/";
                },
                error: function (err) {
                    alert("log out failed! Please try again.");
                    console.error("log out! error:", err);
                }
            });
        });
    })

</script>
</script>
<div class="container py-4">
</div>
